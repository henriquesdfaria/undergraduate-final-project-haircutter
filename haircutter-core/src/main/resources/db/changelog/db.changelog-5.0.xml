<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- ESTABLISHMENT PROFESSIONAL PROFILE TABLE -->
    <changeSet author="henrique" id="1">
        <createTable tableName="establishment_professional_profile">
            <column name="establishment_employee_id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="establishment_professional_profile_establishment_employee_fk"
                                 referencedTableName="establishment_employee" baseColumnNames="establishment_employee_id"
                                 baseTableName="establishment_professional_profile" referencedColumnNames="id"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="establishment_professional_profile"
                                      constraintName="establishment_professional_profile_establishment_employee_fk"/>
            <dropTable tableName="establishment_professional_profile"/>
        </rollback>
    </changeSet>

    <!-- ESTABLISHMENT PROFESSIONAL SERVICE TABLE -->
    <changeSet author="henrique" id="1">
        <createTable tableName="establishment_professional_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="establishment_employee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="establishment_service_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="establishment_professional_service_establishment_employee_fk"
                                 referencedTableName="establishment_employee" baseColumnNames="establishment_employee_id"
                                 baseTableName="establishment_professional_service" referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="establishment_professional_service_establishment_service_fk"
                                 referencedTableName="establishment_service" baseColumnNames="establishment_service_id"
                                 baseTableName="establishment_professional_service" referencedColumnNames="id"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="establishment_professional_service"
                                      constraintName="establishment_professional_service_establishment_employee_fk"/>
            <dropForeignKeyConstraint baseTableName="establishment_professional_service"
                                      constraintName="establishment_professional_service_establishment_service_fk"/>
            <dropTable tableName="establishment_professional_service"/>
        </rollback>
    </changeSet>

</databaseChangeLog>