<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- WEEKDAY TABLE -->
    <changeSet author="henrique" id="1">
        <createTable tableName="weekday">
            <column name="weekday" type="VARCHAR(50)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="weekday"/>
        </rollback>
    </changeSet>

    <!-- ESTABLISHMENT PROFESSIONAL CALENDAR TABLE -->
    <changeSet author="henrique" id="2">
        <createTable tableName="establishment_professional_calendar">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="establishment_employee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="weekday" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="schedule_in_minutes" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="establishment_professional_calendar_establishment_employee_fk"
                                 referencedTableName="establishment_employee"
                                 baseColumnNames="establishment_employee_id"
                                 baseTableName="establishment_professional_calendar" referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="establishment_professional_calendar_weekday_fk"
                                 referencedTableName="weekday" baseColumnNames="weekday"
                                 baseTableName="establishment_professional_calendar" referencedColumnNames="weekday"/>

        <addUniqueConstraint columnNames="establishment_employee_id, weekday, schedule_in_minutes"
                             constraintName="establishment_employee_calendar_unique"
                             tableName="establishment_professional_calendar"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="establishment_professional_calendar"
                                      constraintName="establishment_professional_calendar_establishment_employee_fk"/>
            <dropForeignKeyConstraint baseTableName="establishment_professional_calendar"
                                      constraintName="establishment_professional_calendar_weekday_fk"/>

            <dropUniqueConstraint tableName="establishment_professional_calendar"
                                  constraintName="establishment_professional_calendar_unique"/>

            <dropTable tableName="establishment_professional_calendar"/>
        </rollback>
    </changeSet>

    <changeSet author="henrique" id="3">
        <insert tableName="weekday">
            <column name="weekday" value="SUNDAY"/>
        </insert>
        <insert tableName="weekday">
            <column name="weekday" value="MONDAY"/>
        </insert>
        <insert tableName="weekday">
            <column name="weekday" value="TUESDAY"/>
        </insert>
        <insert tableName="weekday">
            <column name="weekday" value="WEDNESDAY"/>
        </insert>
        <insert tableName="weekday">
            <column name="weekday" value="THURSDAY"/>
        </insert>
        <insert tableName="weekday">
            <column name="weekday" value="FRIDAY"/>
        </insert>
        <insert tableName="weekday">
            <column name="weekday" value="SATURDAY"/>
        </insert>
    </changeSet>

</databaseChangeLog>